<div class="row">
  <div class="col-md-4">
    <h2>Posts</h2>
    <%= form_for(@post, html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
	<div class="col-md-12">
	  <%= f.text_area :content, class: 'form-control', rows: '5', placeholder: "What's on your mind?" %>
	</div>
      </div>
      <div class="form-group">
	<div class="col-md-12 text-right">
	  <%= f.submit 'Post', class: 'btn btn-default' %>
	</div>
      </div>
    <% end %>
  </div>
  <div class="col-md-8">
    <h3>Recent Posts</h3>
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </div>
</div>
