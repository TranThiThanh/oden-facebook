<div class="row">
  <div class="col-md-3">
    <%= image_tag 'http://placehold.it/150x150' %>
  </div>
  <div class="col-md-9">
    <h1><%= @user.email %></h1>
    <h3>Edit Photo</h3>
    <%= form_for(@profile, html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
	<%= f.label :picture, class: 'col-md-2 control-label' %>
	<div class="col-md-4">
	  <%= f.file_field :picture, class: 'form-control' %>
	</div>
      </div>
      <div class="form-group">
	<div class="col-md-offset-2 col-md-10">
	  <%= f.submit 'Update', class: 'btn btn-default' %>
	</div>
      </div>
    <% end %>
  </div>
</div>
