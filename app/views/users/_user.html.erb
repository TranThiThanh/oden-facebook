<div class="media" id="user_<%= user.id %>">
  <div class="media-left">
    <a href="<%= user %>">
      <%= image_tag 'http://placehold.it/70x70', class: 'media-bject' %>
    </a>
  </div>
  <div class="media-body">
    <h4>
      <%= link_to user.email, user %>
    </h4>
    <p>
      <% if user_signed_in? && current_user != user %>
        <%= form_for(FriendRequest.new) do |f| %>
	  <%= f.hidden_field :user_id, value: current_user.id %>
	  <%= f.hidden_field :friend_id, value: user.id %>
	  <% if already_friends(user) %>
	    <%= f.submit 'Friend', class: 'btn btn-success', disabled: true %>
	  <% else %>
	    <%= f.submit 'Friend', class: 'btn btn-success' %>
	  <% end %>
	<% end %>
      <% end %>
    </p>
  </div>
</div>
